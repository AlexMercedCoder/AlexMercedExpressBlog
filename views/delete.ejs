<!DOCTYPE html>
<html lang="en" dir="ltr">

    <head>
        <% include ./partials/head.ejs %>
    </head>


    <!-- THE BODY OF THE WEBSITE -->
    <body>

        <header>
            <% include ./partials/header.ejs %>
        </header>





<!-- CONTENT OF PAGE BEGINS -->
        <main>

            <% for (let post of data.reverse()){ %>

                <div class = "postcontainer">
                <h2><%= post.title %></h2>
                <form action="/index/<%=post.id %>?_method=DELETE" method="POST">
                    <input type="submit" value="DELETE"/>
                </form>

                </div>

            <% } %>
        </main>
<!-- CONTENT OF PAGE ENDS -->







        <footer>
            <% include ./partials/footer.ejs %>
        </footer>


    </body>
    <!-- END OF THE HTML FILE -->

</html>
